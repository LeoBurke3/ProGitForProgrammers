<Page
    x:Class="ProGitForProgrammersProject2.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProGitForProgrammersProject2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Height="175" Width="355">
            <TextBlock Text="User Authentication" FontSize="34" HorizontalAlignment="Center"/>
            <TextBlock FontSize="16"><Run Text="Enter Email:"/></TextBlock>
            <TextBox/>

        </StackPanel>
        <TextBlock FontSize="16" Margin="462,381,462,317"><Run Text="Enter Password:"/></TextBlock>
        <TextBox Margin="462,407,462,281"/>
        <Button Content="Authenticate" Margin="0,452,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
    </Grid>
</Page>
