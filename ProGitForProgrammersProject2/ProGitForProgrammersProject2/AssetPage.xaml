<Page
    x:Class="ProGitForProgrammersProject2.AssetPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProGitForProgrammersProject2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Background="White">
            <StackPanel HorizontalAlignment="Left" Margin="50">
                <TextBlock FontSize="21" FontWeight="Bold" HorizontalTextAlignment="Center" >Assets</TextBlock>
                <ListView Name="AssetList"
                SelectionMode="Single"
                SelectionChanged="AssetList_SelectionChanged"
                ItemClick="AssetList_ItemClick"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ScrollViewer.IsVerticalRailEnabled="True"
                ScrollViewer.VerticalScrollMode="Enabled"
                ScrollViewer.HorizontalScrollMode="Enabled"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.IsHorizontalRailEnabled="True"
                Margin="20">    
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"  >
                                <TextBlock Text="ID" Margin="6,0" Width="50" Foreground="DarkRed" />
                                <TextBlock Text="Name" Width="200" Foreground="DarkRed" />
                                <TextBlock Text="Model" Width="150" Foreground="DarkRed" />
                                <TextBlock Text="Manufacturer" Width="100" Foreground="DarkRed" />
                                <TextBlock Text="Type" Width="100" Foreground="DarkRed" />
                                <TextBlock Text="IP Address" Width="100" Foreground="DarkRed" />
                                <TextBlock Text="Employee Responsible" Width="150" Foreground="DarkRed"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:Asset">
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Name="assetID" Text="{x:Bind aid}" Width="50" />
                                <TextBlock Name="name" Text="{x:Bind name}" Width="200" />
                                <TextBlock Text="{x:Bind model}" Width="150" />
                                <TextBlock Text="{x:Bind manufacturer}" Width="100" />
                                <TextBlock Text="{x:Bind type}" Width="100" />
                                <TextBlock Text="{x:Bind ipAddress}" Width="100" />
                                <TextBlock Text="{x:Bind employeeID}" Width="50"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
           
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="0,50,50,0" Width="200" Background="LightGray" VerticalAlignment="Top" MaxHeight="300">
                <TextBlock Text="Enter the employee ID to link here:" Margin="10"/>
                <TextBox PlaceholderText="Employee ID here... " Margin="10" x:Name="employeeID_Input"></TextBox>
                <Button Width="75" Click="LinkButton_Click" HorizontalAlignment="Center">Link</Button>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="200" VerticalAlignment="Top" Margin="0,50,50,0" Background="LightGray"  MaxHeight="300">
                <TextBlock>Delete</TextBlock>
                <Button Click="Delete_Click">Delete</Button>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
